<resources>
    <!-- Base application theme. -->
    <style name="Theme.Digiwave" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colombianBlue</item>
        <item name="colorPrimaryVariant">@color/darkColombianBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/malachiteGreen</item>
        <item name="colorSecondaryVariant">@color/darkMalachiteGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Digiwave.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colombianBlue</item>
        <item name="colorPrimaryVariant">@color/darkColombianBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/malachiteGreen</item>
        <item name="colorSecondaryVariant">@color/darkMalachiteGreen</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Application component styles -->
    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Digiwave.NoActionBar</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Base content container dimension -->
    <style name="FillContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConstraintContainer">
        <item name="android:layout_width">@dimen/clear</item>
        <item name="android:layout_height">@dimen/clear</item>
    </style>

    <style name="HugContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContainerSize200">
        <item name="android:layout_width">@dimen/imageDensity_200</item>
        <item name="android:layout_height">@dimen/imageDensity_200</item>
    </style>

    <style name="AppbarContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appbarSize</item>
    </style>


    <!-- Content styles -->
    <!-- Outer barrier -->
    <style name="OuterBarrier">
        <item name="android:layout_marginTop">@dimen/defaultBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/defaultBarrierValue</item>
        <item name="android:layout_marginBottom">@dimen/defaultBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/defaultBarrierValue</item>
    </style>

    <style name="WideOuterBarrier">
        <item name="android:layout_marginTop">@dimen/wideBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/wideBarrierValue</item>
        <item name="android:layout_marginBottom">@dimen/wideBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/wideBarrierValue</item>
    </style>

    <style name="SuperOuterBarrier">
        <item name="android:layout_marginTop">@dimen/superBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/superBarrierValue</item>
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/superBarrierValue</item>
    </style>

    <!-- Inner barrier -->
    <style name="InnerBarrier">
        <item name="android:paddingTop">@dimen/defaultBarrierValue</item>
        <item name="android:paddingEnd">@dimen/defaultBarrierValue</item>
        <item name="android:paddingBottom">@dimen/defaultBarrierValue</item>
        <item name="android:paddingStart">@dimen/defaultBarrierValue</item>
    </style>

    <style name="WideInnerBarrier">
        <item name="android:paddingTop">@dimen/wideBarrierValue</item>
        <item name="android:paddingEnd">@dimen/wideBarrierValue</item>
        <item name="android:paddingBottom">@dimen/wideBarrierValue</item>
        <item name="android:paddingStart">@dimen/wideBarrierValue</item>
    </style>

    <style name="SuperInnerBarrier">
        <item name="android:paddingTop">@dimen/superBarrierValue</item>
        <item name="android:paddingEnd">@dimen/superBarrierValue</item>
        <item name="android:paddingBottom">@dimen/superBarrierValue</item>
        <item name="android:paddingStart">@dimen/superBarrierValue</item>
    </style>


    <!-- Multiple chain styles -->
    <style name="FillContainer.WhiteSmokeBackground">
        <item name="android:background">@color/lightWhiteSmoke</item>
    </style>

    <style name="FillContainer.PrimaryBackground">
        <item name="android:background">@color/colombianBlue</item>
    </style>

    <style name="HugContent.WhiteColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HugContent.InnerBarrier" parent="InnerBarrier">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HugContent.InnerBarrier.WhiteColor" parent="HugContent.InnerBarrier">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FillContainer.PrimaryBackground.SuperInnerBarrier">
        <item name="android:padding">@dimen/superBarrierValue</item>
    </style>

    <style name="DefaultTextFormat" parent="HugContent.InnerBarrier.WhiteColor">
        <item name="android:maxLines">@integer/high</item>
    </style>

    <style name="AppbarContainer.SuperInnerBarrier">
        <item name="android:paddingTop">@dimen/superBarrierValue</item>
        <item name="android:paddingEnd">@dimen/superBarrierValue</item>
        <item name="android:paddingBottom">@dimen/superBarrierValue</item>
        <item name="android:paddingStart">@dimen/superBarrierValue</item>
    </style>

    <style name="AppbarContainer.SuperInnerBarrier.NoElevation">
        <item name="elevation">@dimen/clear</item>
        <item name="android:elevation">@dimen/clear</item>
    </style>

    <style name="AppbarStyle.WhiteBackground" parent="AppbarContainer.SuperInnerBarrier.NoElevation">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppbarStyle.PrimaryAccentBackground" parent="AppbarStyle.WhiteBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="FillContainer.WhiteSmokeBackground.FitsSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="FillContainer.SuperOuterBarrier" parent="SuperOuterBarrier">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FillContainer.SuperOuterBarrier.ONLY_BOTTOM">
        <item name="android:layout_marginTop">@dimen/clear</item>
        <item name="android:layout_marginEnd">@dimen/clear</item>
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/clear</item>
    </style>

    <style name="LightCardViewStyle.SuperOuterBarrier" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/defaultBarrierValue</item>
        <item name="cardElevation">@dimen/defaultBarrierValue</item>
        <item name="cardMaxElevation">@dimen/defaultBarrierValue</item>
        <item name="android:layout_marginTop">@dimen/superBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/superBarrierValue</item>
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/superBarrierValue</item>
    </style>

    <style name="DarkCardViewStyle.SuperOuterBarrier" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/defaultBarrierValue</item>
        <item name="cardElevation">@dimen/defaultBarrierValue</item>
        <item name="cardMaxElevation">@dimen/defaultBarrierValue</item>
        <item name="android:layout_marginTop">@dimen/superBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/superBarrierValue</item>
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/superBarrierValue</item>
    </style>

    <style name="LightCardViewStyle.SuperOuterBarrier.CLEAR_BOTTOM">
        <item name="android:layout_marginBottom">@dimen/clear</item>
    </style>

    <style name="DarkCardViewStyle.SuperOuterBarrier.CLEAR_BOTTOM">
        <item name="android:layout_marginBottom">@dimen/clear</item>
    </style>

    <style name="FeatureListStyle">
        <item name="android:layout_width">@dimen/imageDensity_100</item>
        <item name="android:layout_height">@dimen/imageDensity_100</item>
    </style>

    <style name="FeatureImageThemes">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/lightColombianBlue</item>
        <item name="android:backgroundTint">@color/lightColombianBlue</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="FeatureTitleTextThemes">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/high</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/aestheticBlack</item>
    </style>

    <style name="FeatureDescriptionTextThemes" parent="FeatureTitleTextThemes">
        <item name="android:maxLines">@integer/triad</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ConstraintContainer.OuterBarrier" parent="OuterBarrier">
        <item name="android:layout_width">@dimen/clear</item>
        <item name="android:layout_height">@dimen/clear</item>
    </style>

    <style name="ConstraintContainer.OuterBarrier.ONLY_BOTTOM" parent="ConstraintContainer.OuterBarrier">
        <item name="android:layout_marginTop">@dimen/clear</item>
        <item name="android:layout_marginEnd">@dimen/clear</item>
        <item name="android:layout_marginStart">@dimen/clear</item>
    </style>

    <style name="FillContainer.RecyclerViewStyles">
        <item name="android:background">@drawable/bg_list_features</item>
        <item name="android:elevation">@dimen/defaultBarrierValue</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/superBarrierValue</item>
    </style>

    <style name="FillContainer.RecyclerViewStyles.WithBarrier">
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
        <item name="android:layout_marginStart">@dimen/superBarrierValue</item>
        <item name="android:layout_marginEnd">@dimen/superBarrierValue</item>
    </style>

    <style name="VerticalScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="FillContainer.PrimaryBackground.FitsSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="FillContainer.FitsSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="HugContent.SuperOuterBarrier.ONLY_BOTTOM" parent="HugContent">
        <item name="android:layout_marginBottom">@dimen/superBarrierValue</item>
    </style>

    <style name="HugContent.CustomOuterBarrier.Dim50.ONLY_BOTTOM" parent="HugContent">
        <item name="android:layout_marginBottom">@dimen/dim50</item>
    </style>

    <style name="PrimaryBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SoftGreyBackground">
        <item name="android:background">@color/softGrey</item>
    </style>

    <style name="ConstraintContainer.SuperMicroElevation">
        <item name="android:elevation">@dimen/oddLowMicroValue</item>
    </style>

    <style name="FillContainer.FillViewPort">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="FillContainer.SuperInnerBarrier">
        <item name="android:paddingTop">@dimen/superBarrierValue</item>
        <item name="android:paddingEnd">@dimen/superBarrierValue</item>
        <item name="android:paddingBottom">@dimen/superBarrierValue</item>
        <item name="android:paddingStart">@dimen/superBarrierValue</item>
    </style>

    <style name="TextInputThemes" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" />

    <style name="ConstraintContainer.TextInputStyles">
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputTypeNumber">
        <item name="android:inputType">number</item>
    </style>

    <style name="TextInputTypeTextChapCharacters">
        <item name="android:inputType">textCapCharacters</item>
    </style>

    <style name="ConstraintContainer.TextInputStyles.SuperOuterBarrier.JUST_TOP" parent="ConstraintContainer.TextInputStyles">
        <item name="android:layout_marginTop">@dimen/superBarrierValue</item>
    </style>
</resources>
