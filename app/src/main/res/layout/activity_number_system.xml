<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FillContainer"
    tools:context=".views.features.numsys.NumberSystemActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/numsys_appbar"
        style="@style/ConstraintContainer.FitsSystemWindows"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/inc_toolbar"
            style="@style/FillContainer"
            layout="@layout/layout_toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/inc_tab_layout"
        style="@style/ConstraintContainer"
        layout="@layout/layout_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numsys_appbar" />

</androidx.constraintlayout.widget.ConstraintLayout>
